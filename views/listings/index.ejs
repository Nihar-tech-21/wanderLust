<% layout("layouts/boilerplate") %>

<body style="overflow-x: hidden;">
    
    <style>
        #filters {
            display: flex;
            /* flex-wrap: wrap; */
            align-items: center;
            overflow: auto;
            -ms-overflow-style: none;   
            scrollbar-width: none; 
        }
        #filters::-webkit-scrollbar {
            width: 0;
            height: 0;             
        }
        #filtersTax{
            display: flex;
            /* flex-wrap: wrap; */
            align-items: center;
            overflow: auto;
        }
        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }
        .filter a {
            text-decoration: none;
            color: inherit;
        }
        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
        .filter p {
            font-size: 0.8rem;
        }
        .tax-info {
            display: none;
        }
        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 2rem;
            display: flex;
            align-items: center;
        }
        @media (max-width: 768px) {
            .tax-toggle {
                padding: 0.3rem 0.8rem;
                border: 1px solid black;
                border-radius: 0.8rem;
                height: 50px;
            }
            .tax-toggle .form-check-input {
                transform: scale(0.7); /* slightly smaller switch on phones */
            }
            #switchCheckDefault {
                display: none !important; /* hide default switch */
            }
            #taxIcon {
                display: inline-block !important; /* show icon */
                align-items: center;
                justify-content: center;
            }
        }
    </style>

    <div class="d-flex align-items-center">   
        <div id="filters">
            <div class="filter">
                <div><a href="/listings?category=Trending"><i class="fa-solid fa-fire"></i></a></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Rooms"><i class="fa-solid fa-bed"></i></a></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Iconic cities"><i class="fa-solid fa-mountain-city"></i></a></div>
                <p>Iconic cities</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Mountains"><i class="fa-solid fa-mountain"></i></a></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Castles"><i class="fa-brands fa-fort-awesome"></i></a></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Amazing Pools"><i class="fa-solid fa-person-swimming"></i></a></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Camping"><i class="fa-solid fa-campground"></i></a></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Farms"><i class="fa-solid fa-cow"></i></a></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Arctic"><i class="fa-solid fa-snowflake"></i></a></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Domes"><i class="fa-solid fa-igloo"></i></a></div>
                <p>Domes</p>
            </div>
            <div class="filter">
                <div><a href="/listings?category=Boats"><i class="fa-solid fa-ship"></i></a></div>
                <p>Boats</p>
            </div>

        </div>

        <div id="filtersTax" class="flex-shrink-0 ms-3">
            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input d-none d-md-inline" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" id="switchCheckDefault" for="switchCheckDefault">Display total after taxes</label>
                    <label class="form-check-label d-inline d-md-none" id="taxIcon" for="switchCheckDefault"><i class="fa-solid fa-money-bills" style="cursor:pointer;"></i>&nbsp;&nbsp;&nbsp;After Taxes</label>
                </div>
            </div>
        </div>
    </div> 

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" style="margin-left: auto;">
        <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link"> 
            <div class="card col listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;" >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                </div>
            </div>
        </a>   
        <% } %>
    </div>
    
    <br><br><br><br>
    <br><br><br><br>
    <br><br><br><br>
</body>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", ()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display != "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        } 
    })
</script>
    
